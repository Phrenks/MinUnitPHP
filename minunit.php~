<?php
/* minunit.php
 * Original C Library (not by me): http://www.jera.com/techinfo/jtns/jtn002.html
 * Adapted to PHP by Francisco José Marín
 */

function mu_assert($message, $test){
  if ($test == false) 
    return $message;
} 

function mu_run_test($class, $test){
  global $tests_run;

  $message = call_user_func(array($class, $test)); 
  $tests_run++;
  if ($message) return $message;
}
?>